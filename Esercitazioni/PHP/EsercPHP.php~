		<h1>Task 4</h1>

		<?php
			function potenza($numero, $esponente){
				$numero_esp=$numero;
				for($i=0;$i<$esponente;$i++){
					$numero*=$numero_esp;
				}
				return $numero;
			}

			$risultato=potenza(5, 3);
			echo "Il risultato di 5 elevato 3 è:$risultato";

			function swap(&$a, &$b){
				$temp=$a;
				$a=$b;
				$b=$temp;
			}

			$a="aaa";
			$b="bbb";
			swap($a, $b);
			echo "a:$a, b:$b";
		?>
